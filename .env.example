# ResiliBot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=XXXXXXXXXXX

# =============================================================================
# API Configuration
# =============================================================================
# Your deployed API Gateway endpoint
REACT_APP_API_ENDPOINT=https://xxxxxxx.execute-api.us-east-1.amazonaws.com/prod

# =============================================================================
# Slack Integration
# =============================================================================
# Get this from: https://api.slack.com/apps -> Your App -> Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WORKSPACE/YOUR_CHANNEL/YOUR_WEBHOOK_TOKEN
SLACK_CHANNEL=#incidents
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# =============================================================================
# Jira Integration (Optional)
# =============================================================================
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=INC

# =============================================================================
# PagerDuty Integration (Optional)
# =============================================================================
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_SERVICE_ID=your-service-id

# =============================================================================
# Email Notifications (Optional)
# =============================================================================
SES_FROM_EMAIL=noreply@yourcompany.com
SES_TO_EMAILS=devops@yourcompany.com,oncall@yourcompany.com

# =============================================================================
# Microsoft Teams Integration (Optional)
# =============================================================================
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-url

# =============================================================================
# Dashboard Configuration
# =============================================================================
REACT_APP_DASHBOARD_TITLE=ResiliBot - Incident Response
REACT_APP_COMPANY_NAME=Your Company
REACT_APP_REFRESH_INTERVAL=10000
REACT_APP_THEME=dark

# =============================================================================
# Monitoring & Observability
# =============================================================================
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# =============================================================================
# Security
# =============================================================================
# JWT secret for API authentication (if implemented)
JWT_SECRET=your-super-secret-jwt-key
API_KEY=your-api-key-for-external-access

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SLACK_NOTIFICATIONS=true
ENABLE_JIRA_INTEGRATION=true
ENABLE_PAGERDUTY_INTEGRATION=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_TEAMS_NOTIFICATIONS=false
ENABLE_AUTO_REMEDIATION=true
ENABLE_HUMAN_APPROVAL=true

# =============================================================================
# Development/Demo Settings
# =============================================================================
DEMO_MODE=false
MOCK_INCIDENTS=false
LOG_LEVEL=INFO